<%- include('partials/header')-%>

<div class="col-sm-12 col-md-6 offset-md-3">
  <h2>Welcome to the Login Form Demo!</h2>

  <% if (typeof successMsg != "undefined") { %>
    <div class="alert alert-success" role="alert"><%= successMsg %></div>
  <% } %>
  <% if (typeof errorMsg != "undefined") { %>
    <div class="alert alert-danger" role="alert"><%= errorMsg %></div>
  <% } %>

  <div class="card">
    <div class="card-body">
      <form action="/users" method="post">
        <div class="form-group">
          <label for="exampleInputEmail1">Email address</label>
          <input class="form-control" id="exampleInputEmail1" type="email" aria-describedby="emailHelp" name="email" /><small class="form-text text-muted" id="emailHelp">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group">
          <label for="exampleInputPassword1">Password</label>
          <input class="form-control" id="exampleInputPassword1" type="password" name="password" />
        </div>
        <button class="btn btn-primary" type="submit">Submit</button>
      </form>
    </div>
  </div>
</div>

<%- include('partials/footer')-%>